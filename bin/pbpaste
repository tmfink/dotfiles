#!/bin/sh
# Paste from system clipboard to stdout

set -eu

UNAME=$(uname)
case "$UNAME" in
Linux)
    xclip -selection clipboard -o "$@"
    # make sure we get the trailing newline
    echo
    exit 0
    ;;
Darwin)
    exec /usr/bin/pbpaste "$@"
    ;;
*)
    echo "pbcopy not implemented for $UNAME"
esac

exit 1
